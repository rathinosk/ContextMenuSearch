{
   "manifest_version": 3,
   "name": "Context Menu Search",
   "version": "1.0.0",
   "description": "Use the right-click context menu to search selected text with different search engines instantly.",
   "default_locale": "en",
   "minimum_chrome_version": "88.0.0.0",
   "icons": {
      "16": "images/ico16.png",
      "48": "images/ico48.png",
      "128": "images/ico128.png"
   },
   "background": {
      "service_worker": "js/background.js"
   },
   "permissions": [ "contextMenus", "storage", "tab" ],
   "options_page": "options.html",
   "web_accessible_resources": [
      {
         "resources": ["js/encoding.min.js"],
         "matches": ["<all_urls>"]
      }
   ]
}
