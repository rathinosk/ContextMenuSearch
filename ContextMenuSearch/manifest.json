{
   "background": {
      "service_worker": "js/background.js"
   },
   "default_locale": "en",
   "description": "Use the right-click context menu to search selected text with different search engines instantly.",
   "icons": {
      "128": "images/ico128.png",
      "16": "images/ico16.png",
      "48": "images/ico48.png"
   },
	"web_accessible_resources": [
		{
			"resources": ["js/encoding.min.js"],
			"matches": ["<all_urls>"]
		}
	],
   "manifest_version": 3,
   "minimum_chrome_version": "88",
   "name": "Context Menu Search",
   "options_page": "options.html",
   "permissions": [ "contextMenus", "storage", "tab" ],
   "version": "1.0.0"
}
